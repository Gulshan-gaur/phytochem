<title>PhytoChemDB |Search</title>
<%- include("partials/header"); -%>
<link rel="stylesheet" href="searchstyle.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">

    <div id="search">
        <div class="card text-center mainsearch ">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab">
                    <li class="nav-item">
                        <a href="#PubChem" class="nav-link head" data-bs-toggle="tab">Pubchem CID</a>
                    </li>
                    <li class="nav-item">
                      <a href="#smile" class="nav-link active head" data-bs-toggle="tab">Smile</a>
                    </li>
                    <li class="nav-item">
                        <a href="#Molecular" class="nav-link head" data-bs-toggle="tab">Molecular Formula</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="smile">
                      <form action="/idresult" method="get">
                        <div >
                           <input type="search" class="form-control" name="smile"  placeholder="Search by Smile eg: CN1C=C(CC=C1)C(=O)O "> <br>
                           <button class="big-button" type="submit">SEARCH</button>
                         </div>
                      </form>
                    </div>
                    <div class="tab-pane fade" id="PubChem">
                      <form action="/idresult" method="get">
                        <div >
                           <input type="search" class="form-control" name="pubchem_cid" placeholder="Search by PubChem CID"> <br>
                           <button class="big-button" type="submit">SEARCH</button>
                         </div>
                      </form>
                    </div>
                    <div class="tab-pane fade" id="Molecular">
                      <form action="/idresult" method="get">
                        <div >
                           <input type="search" class="form-control" name="mol_formula" placeholder="Search by Molecular Formula"> <br>
                           <button class="big-button" type="submit">SEARCH</button>
                         </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<section id="para">
  <h4>Physiochemical Properties</h4>
  <hr>
  <form action="/para_search" class="" method="get">
    <label for="mol_wig" class="lbl">select the range of Molecular Weight to search from : </label>
    <input type="text" class="inp_para"  name="mol_wig">
    <label for="">to</label>
    <input type="text" class="inp_para" name="lessthan" value=""> <br>
    <label for="h_donor" class="lbl">Select desired number of Hydrogen Bond Donors :</label>
    <input type="text" class="inp_para" name="h_donor" value=""> <br>
    <label for="h_acceptor" class="lbl">Select desired number of Hydrogen Bond Acceptors :</label>
    <input type="text" class="inp_para" name="h_acceptor" value=""> <br>
    <label for="aro_ring" class="lbl">Select desired number Aromatic Rings :</label>
    <input type="text" class="inp_para" name="aro_ring" value=""> <br>
    <button type="submit" class="para-but" name="button">Submit</button>
  </form>
</section>


<%- include("partials/footer"); -%>
